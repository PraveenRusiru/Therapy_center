<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vBox" prefHeight="718.0" prefWidth="1058.0" spacing="20.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.therapy_center.Controller.Receptionist.PaymentController">
   <children>
      <VBox prefHeight="84.0" prefWidth="1038.0" spacing="5.0" VBox.vgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label prefWidth="150.0" text="Payment Id" HBox.hgrow="ALWAYS" />
                  <Label fx:id="paymentId" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="27.2">
               <children>
                  <Label prefWidth="150.0" text="Patient Id" HBox.hgrow="ALWAYS" />
                  <ComboBox fx:id="comboboxPatientId" onAction="#selectingPatient" prefWidth="150.0" />
                  <Label fx:id="patientName" maxWidth="1.7976931348623157E308" prefHeight="18.0" prefWidth="361.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label prefWidth="150.0" text="Session Id" HBox.hgrow="ALWAYS" />
                  <ComboBox fx:id="comboboxSession" onAction="#selectingSession" prefWidth="150.0" />
                  <Label fx:id="appointmentId" maxWidth="1.7976931348623157E308" prefHeight="18.0" prefWidth="361.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label prefHeight="17.0" prefWidth="139.0" text="Amount" textAlignment="JUSTIFY" />
                  <TextField fx:id="txtAmount" prefHeight="27.0" prefWidth="160.0" style="-fx-border-width: 0 0 1px 0;" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label prefHeight="17.0" prefWidth="139.0" text="Date" textAlignment="JUSTIFY" />
                  <DatePicker fx:id="datePicker" onAction="#datePicked" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label prefWidth="150.0" text="Status" HBox.hgrow="ALWAYS" />
                  <ComboBox fx:id="comboboxStatus" onAction="#selectingStatus" prefWidth="150.0" />
                  <Label maxWidth="1.7976931348623157E308" prefHeight="18.0" prefWidth="361.0" />
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox alignment="CENTER_RIGHT" prefHeight="29.0" prefWidth="1038.0" spacing="30.0" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="btnReset" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnResetOnAction" prefWidth="80.0" style="-fx-background-color: #e74c3c;" text="Reset" textFill="WHITE" HBox.hgrow="ALWAYS">
               <cursor>
                  <Cursor fx:constant="CLOSED_HAND" />
               </cursor>
            </Button>
            <Button fx:id="btnDelete" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnDeleteOnAction" prefWidth="80.0" style="-fx-background-color: #c0392b;" text="Delete" textFill="WHITE" HBox.hgrow="ALWAYS">
               <cursor>
                  <Cursor fx:constant="CLOSED_HAND" />
               </cursor>
            </Button>
            <Button fx:id="btnUpdate" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnUpdateOnAction" prefWidth="80.0" style="-fx-background-color: #e67e22;" text="Update" textFill="WHITE" HBox.hgrow="ALWAYS">
               <cursor>
                  <Cursor fx:constant="CLOSED_HAND" />
               </cursor>
            </Button>
            <Button fx:id="btnSave" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnSaveCustomerOnAction" prefHeight="26.0" prefWidth="234.0" style="-fx-background-color: #2ecc71;" text="Save" textFill="WHITE">
               <cursor>
                  <Cursor fx:constant="CLOSED_HAND" />
               </cursor>
            </Button>
         </children>
      </HBox>
      <TableView fx:id="tblCustomer" onMouseClicked="#onClickTable" prefHeight="422.0" prefWidth="1038.0" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="colPaymentId" prefWidth="75.0" text="Payment ID" />
            <TableColumn fx:id="colSessionId" prefWidth="75.0" text="Session ID" />
            <TableColumn fx:id="colPatientId" prefWidth="75.0" text="Patient ID" />
            <TableColumn fx:id="colDate" prefWidth="75.0" text="Date" />
            <TableColumn fx:id="colAmount" prefWidth="75.0" text="Amount" />
            <TableColumn fx:id="colStatus" prefWidth="75.0" text="Status" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
