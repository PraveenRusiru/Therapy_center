<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vBox" prefHeight="718.0" prefWidth="1058.0" spacing="20.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.therapy_center.Controller.Admin.TherapyProgrammeController">
   <children>
      <VBox prefHeight="162.0" prefWidth="1038.0" spacing="5.0" VBox.vgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="27.2">
               <children>
                  <Label prefWidth="150.0" text="Programme Id" HBox.hgrow="ALWAYS" />
                  <Label fx:id="lblProgramId" maxWidth="1.7976931348623157E308" prefHeight="18.0" text="1" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label prefWidth="150.0" text="Program Name " HBox.hgrow="ALWAYS" />
                  <TextField fx:id="txtprogramme" promptText="Therapy Sessions " style="-fx-background-color: #fff; -fx-border-color: #7367F0; -fx-border-width: 0 0 1px 0;" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label prefWidth="150.0" text="Duration" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="txtDuration" promptText="12 weeks" style="-fx-background-color: #fff; -fx-border-color: #7367F0; -fx-border-width: 0 0 1px 0;" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label prefWidth="150.0" text="Fee (LKR)" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="txtFee" promptText="80,000.00" style="-fx-background-color: #fff; -fx-border-color: #7367F0; -fx-border-width: 0 0 1px 0;" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label prefWidth="150.0" text="Description" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="txtDescription" promptText="a patient enrolled in Cognitive Behavioral Therapy..... . " style="-fx-background-color: #fff; -fx-border-color: #7367F0; -fx-border-width: 0 0 1px 0;" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox alignment="CENTER_RIGHT" prefHeight="29.0" prefWidth="1038.0" spacing="30.0" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="btnReset" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnResetOnAction" prefWidth="80.0" style="-fx-background-color: #e74c3c;" text="Reset" textFill="WHITE" HBox.hgrow="ALWAYS">
               <cursor>
                  <Cursor fx:constant="CLOSED_HAND" />
               </cursor>
            </Button>
            <Button fx:id="btnDelete" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnDeleteOnAction" prefWidth="80.0" style="-fx-background-color: #c0392b;" text="Delete" textFill="WHITE" HBox.hgrow="ALWAYS">
               <cursor>
                  <Cursor fx:constant="CLOSED_HAND" />
               </cursor>
            </Button>
            <Button fx:id="btnUpdate" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnUpdateOnAction" prefWidth="80.0" style="-fx-background-color: #e67e22;" text="Update" textFill="WHITE" HBox.hgrow="ALWAYS">
               <cursor>
                  <Cursor fx:constant="CLOSED_HAND" />
               </cursor>
            </Button>
            <Button fx:id="btnSave" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnSaveCustomerOnAction" prefHeight="26.0" prefWidth="234.0" style="-fx-background-color: #2ecc71;" text="Save" textFill="WHITE">
               <cursor>
                  <Cursor fx:constant="CLOSED_HAND" />
               </cursor>
            </Button>
         </children>
      </HBox>
      <TableView fx:id="tblCustomer" onMouseClicked="#onClickTable" prefHeight="422.0" prefWidth="1038.0" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="colProgrammeId" prefWidth="75.0" text="Programme Id" />
            <TableColumn fx:id="colName" prefWidth="75.0" text="Programme name" />
            <TableColumn fx:id="colDuration" prefWidth="75.0" text="Duration" />
            <TableColumn fx:id="colFee" prefWidth="75.0" text="Fee (LKR)" />
            <TableColumn fx:id="colDescription" prefWidth="75.0" text="Description" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
